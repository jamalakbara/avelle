{%- comment -%}
  Derives CSS variables from the menu typography settings for 2nd and 3rd level menu items.
  Accepts:
     settings: {block.settings}
{%- endcomment -%}

{%- liquid
  assign font_link = settings.type_font_primary_link | default: 'body'
  if menu_type == 'drawer'
    assign font_link = 'body'
  endif
  assign font_style = settings.menu_font_style | default: 'regular'
%}
