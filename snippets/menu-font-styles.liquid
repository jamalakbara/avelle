{%- comment -%}
  Derives CSS variables from the menu typography settings for 1st level/main menu items.
  Accepts:
     settings {block.settings}
     menu_type {string}: 'drawer' or 'mega_menu'
{%- endcomment -%}

{%- liquid
  assign font_link = settings.type_font_primary_link | default: 'body'
  if menu_type == 'drawer'
    assign font_link = 'body'
  endif
%}
--menu-top-level-font-family: var(--font-{{ font_link }}--family); --menu-top-level-font-size-desktop:
{{ settings.type_font_primary_size }}; --menu-top-level-font-style: var(--font-
{{- font_link -}}
--style); --menu-top-level-font-weight: var(--font-
{{- font_link -}}
--weight); --menu-top-level-font-case:
{% if menu_type == 'drawer' %}
  {{ settings.product_title_case | default: 'none' }}
{% elsif settings.type_case_primary_link == 'uppercase' -%}
  uppercase
{%- else -%}
  none
{%- endif -%}
;
{% if menu_type == 'drawer' %}
  --menu-top-level-font-size: var(--menu-font-md--size); --menu-top-level-font-line-height:
  var(--menu-font-md--line-height);
{% else %}
  --menu-top-level-font-size: var(--menu-font-sm--size); --menu-top-level-font-line-height:
  var(--menu-font-sm--line-height);
{% endif %}
--menu-top-level-font-color: var(--color-foreground); --menu-top-level-font-color-rgb: var(--color-foreground-rgb);
