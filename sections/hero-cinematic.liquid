{% schema %}
{
  "name": "Cinematic Hero",
  "tag": "section",
  "class": "section-hero-cinematic",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background Video (Optional)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Every Day"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium essentials for the modern lifestyle."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Cinematic Hero"
    }
  ]
}
{% endschema %}

<div class="hero-cinematic">
  {% comment %} Background Media {% endcomment %}
  <div class="hero-cinematic__bg" data-parallax-hero>
    {% if section.settings.video != blank %}
      {{
        section.settings.video
        | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'hero-cinematic__media'
      }}
    {% elsif section.settings.mobile_image != blank %}
      <picture class="hero-cinematic__media">
        <source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url: width: 800 }}">
        <source media="(min-width: 768px)" srcset="{{ section.settings.image | image_url: width: 3000 }}">
        {{
          section.settings.image
          | image_url: width: 3000
          | image_tag: class: 'hero-cinematic__media-img', loading: 'eager'
        }}
      </picture>
    {% elsif section.settings.image != blank %}
      {{
        section.settings.image
        | image_url: width: 3000
        | image_tag: class: 'hero-cinematic__media', loading: 'eager'
      }}
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-cinematic__media placeholder' }}
    {% endif %}
  </div>

  <div class="hero-cinematic__overlay"></div>

  {% comment %} Content {% endcomment %}
  <div class="hero-cinematic__content">
    <h1 class="hero-cinematic__heading reveal-text">
      {{ section.settings.heading }}
    </h1>

    <div class="hero-cinematic__subheading-wrapper reveal-text">
      <p class="hero-cinematic__subheading">
        {{ section.settings.subheading }}
      </p>
    </div>

    {% if section.settings.button_link != blank %}
      <div class="hero-cinematic__btn-wrapper reveal-text">
        <a href="{{ section.settings.button_link }}" class="hero-cinematic__btn magnetic-btn">
          {{ section.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>

  {% comment %} Scroll Indicator {% endcomment %}
  <div class="hero-cinematic__scroll">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M7 13L12 18L17 13" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 6L12 13" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</div>

<style>
  .hero-cinematic {
    position: relative;
    height: 100vh;
    height: 100svh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .hero-cinematic__bg {
    position: absolute;
    top: -15%;
    left: 0;
    width: 100%;
    height: 130%; /* Increased for safer parallax */
    z-index: 0;
  }

  .hero-cinematic__media,
  .hero-cinematic__bg picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Ensure img inside picture also covers */
  .hero-cinematic__bg picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-cinematic__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
    pointer-events: none;
  }

  .hero-cinematic__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .hero-cinematic__heading {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .hero-cinematic__subheading-wrapper {
    margin: 0;
  }

  .hero-cinematic__subheading {
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 300;
    margin: 0;
    opacity: 0.9;
    color: #fff;
  }

  .hero-cinematic__btn-wrapper {
    margin-top: 1.5rem;
  }

  .hero-cinematic__btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    border: 1px solid #fff;
    color: #fff;
    text-transform: uppercase;
    text-decoration: none;
    letter-spacing: 0.1em;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    background: transparent;
  }

  .hero-cinematic__btn:hover {
    background: #fff;
    color: #000;
  }

  .hero-cinematic__scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    animation: bounce 2s infinite;
    opacity: 0.7;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>
