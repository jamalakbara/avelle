{% schema %}
{
  "name": "About CTA - Cinematic",
  "tag": "section",
  "class": "section-about-cta",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "Recommended: 16:9 Landscape (e.g., 2880 x 1620px)"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background Video (Optional)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover The Collection"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 40
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section Height",
      "options": [
        { "value": "50vh", "label": "Small (50vh)" },
        { "value": "75vh", "label": "Medium (75vh)" },
        { "value": "100vh", "label": "Full Screen (100vh)" }
      ],
      "default": "50vh"
    }
  ],
  "presets": [
    {
      "name": "About CTA - Cinematic"
    }
  ]
}
{% endschema %}

{%- style -%}
  .about-cta {
    position: relative;
    height: {{ section.settings.height }};
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .about-cta__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .about-cta__media {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .about-cta__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
    pointer-events: none;
  }

  .about-cta__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 700px;
    padding: 0 2rem;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .about-cta__content.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .about-cta__heading {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 2rem 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .about-cta__btn {
    display: inline-block;
    padding: 1.2rem 3rem;
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 999px;
    color: #fff;
    text-transform: uppercase;
    text-decoration: none;
    letter-spacing: 0.1em;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
  }

  .about-cta__btn:hover {
    background: #fff;
    color: #000;
    border-color: #fff;
    transform: scale(1.05);
  }
{%- endstyle -%}

<div class="about-cta">
  <div class="about-cta__bg">
    {% if section.settings.video != blank %}
      {{
        section.settings.video
        | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'about-cta__media'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 3000 | image_tag: class: 'about-cta__media', loading: 'lazy' }}
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'about-cta__media placeholder' }}
    {% endif %}
  </div>

  <div class="about-cta__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>

  <div class="about-cta__content" data-scroll-reveal>
    <h2 class="about-cta__heading">
      {{ section.settings.heading }}
    </h2>

    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="about-cta__btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

<script>
  // Scroll reveal for CTA
  if ('IntersectionObserver' in window) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.3,
      }
    );

    const ctaContent = document.querySelector('.about-cta__content[data-scroll-reveal]');
    if (ctaContent) {
      observer.observe(ctaContent);
    }
  } else {
    const ctaContent = document.querySelector('.about-cta__content[data-scroll-reveal]');
    if (ctaContent) {
      ctaContent.classList.add('is-visible');
    }
  }
</script>
