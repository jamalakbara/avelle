{% liquid
  if section.settings.collection_list != blank
    assign section_collections = section.settings.collection_list
    assign max_items = section.settings.collection_list.count
  elsif section.settings.layout_type == 'editorial'
    assign max_items = section.settings.max_collections
  elsif section.settings.layout_type == 'bento'
    assign max_items = 4
  elsif section.settings.layout_type == 'carousel'
    assign max_items = section.settings.columns | plus: 2
  elsif section.settings.layout_type == 'grid'
    assign max_items = section.settings.columns
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<style>
  /* Awwwards-Worthy Cinematic Collection Grid Styles */
  .section-resource-list .collection-card {
    overflow: hidden;
    position: relative;
    border-radius: var(--card-corner-radius, 0px); /* Respect theme settings if any */
  }

  /* 1. Image Scale & Darkening Wash (Magnetic Effect) */
  .section-resource-list .collection-card .collection-card__image .image-block__image {
    transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1) !important;
  }

  .section-resource-list .collection-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.35); /* Elegant dark wash */
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
    z-index: 1;
  }

  .section-resource-list .collection-card:hover .collection-card__image .image-block__image {
    transform: scale(1.06) !important;
  }

  .section-resource-list .collection-card:hover::after {
    opacity: 1;
  }

  /* 2. Editorial Typography & Reveal */
  .section-resource-list .collection-card__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 2; /* Above the wash */
    pointer-events: none; /* Let clicks pass through to card link */
  }

  .section-resource-list .collection-card__content .text-block {
    text-align: center;
    align-items: center;
    margin: 0;
    padding: 0;
    background: transparent !important; /* Remove default white tag background */
    width: 100%;
  }

  .section-resource-list .collection-card__content .text-block p {
    font-family: var(--font-heading--family);
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff !important;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    font-weight: 300;
    margin: 0;
    padding: 0;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* The "Shop Collection" Reveal */
  .section-resource-list .collection-card__content::after {
    content: 'Shop Collection â†—';
    display: block;
    font-family: var(--font-body--family);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #ffffff;
    margin-top: 15px;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .section-resource-list .collection-card:hover .text-block p {
    transform: translateY(-8px);
  }

  .section-resource-list .collection-card:hover .collection-card__content::after {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
  data-testid="collection-list"
>
  <div class="section-resource-list__content">
    {%- content_for 'blocks' -%}
  </div>

  {% if section_collections == null %}
    {% for i in (1..max_items) %}
      {% assign section_collections = section_collections | append: ', ' %}
    {% endfor %}

    {% assign section_collections = section_collections | split: ',' %}
  {% endif %}

  {% capture list_items %}
    {% for collection in section_collections limit: max_items %}
      <div class="resource-list__item">
        {% content_for 'block', type: '_collection-card', id: 'static-collection-card', closest.collection: collection %}
      </div>
      {% unless forloop.last %}
        <!--@list/split-->
      {% endunless %}
    {% endfor %}
  {% endcapture %}

  {% liquid
    # Create an array from the list items to be used for different layout types
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'collectionList',
    slide_count: max_items,
    content_type: 'collections',
    test_id: 'collections-list-grid'
  %}
</div>

